<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Timetable"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:padding="16dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="5"
        android:rowCount="11"
        android:padding="8dp">

        <!-- Header Row -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="#FFC107"
            android:gravity="center"
            android:text="Mon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="#FFC107"
            android:gravity="center"
            android:text="Tue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="#FFC107"
            android:gravity="center"
            android:text="Wen" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="#FFC107"
            android:gravity="center"
            android:text="Thu" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="#FFC107"
            android:gravity="center"
            android:text="Fri" />

        <!-- Add subjects to the grid -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FF5722"
            android:gravity="center"
            android:text="French language" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#2196F3"
            android:gravity="center"
            android:text="Economics" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FF9800"
            android:gravity="center"
            android:text="Arts" />

        <!-- Continue adding all subjects... -->

        <!-- Example for another row -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="4"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="Physical edu" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="4"
            android:background="#FF9800"
            android:gravity="center"
            android:text="Technical works" />

        <!-- Add the rest of the rows similarly -->

    </GridLayout>

</LinearLayout>
